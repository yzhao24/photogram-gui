<h1>Photo Details</h1>

<dl>
  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @the_photo.image %>">
  </dd>

  <dt>
    Caption
  </dt>
  <dd>
    <p>
      <%= @the_photo.caption%>
    </p>
  </dd>

  <dt>
    Owner
  </dt>
  <dd>
    <%= @the_photo.poster.username%>
  </dd>

  <dt>
    Posted
  </dt>
  <dd>
    <%= @the_photo.created_at%>
  </dd>

  <dt>
    Edit photo
  </dt>
  <dd>
    <form action="/update_photo/777" method="post">
      <label for="browser_image">Image</label>
      <input id="browser_image" type="text" name="input_image" placeholder="Enter a URL for the image..." value=https://robohash.org/dolorehicincidunt.png?size=300x300&amp;set=set1>

      <label for="browser_caption">Caption</label>
      <textarea id="browser_caption" name="input_caption" placeholder="Enter a caption for the photo...">Hey!</textarea>

      <button>Update photo</button>
    </form>
  </dd>

  <dt>
    Delete photo
  </dt>
  <dd>
    <a href="/delete_photo/<%= @the_photo.id%>">
      Delete this photo
    </a>
  </dd>
</dl>

<h2>Comments</h2>

<table>
  <tr>
    <th>
      Commenter
    </th>

    <th>
      Comment
    </th>

    <th>
      Posted
    </th>

  </tr>

  <% @the_photo.comments.each do |a_comment| %>
  <tr>

    <td>
      <%= a_comment.commenter.username %>
    </td>

    <td>
      <%= a_comment.body %>
    </td>

    <td>
      <%= a_comment.created_at %>
    </td>

  </tr>
  <% end %>
</table>

